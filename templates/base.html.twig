    <section id="container">
    <!-- **********************************************************************************************************************************************************
        CONTENU TOP BAR ET CONNEXION
        *********************************************************************************************************************************************************** -->
    <!--header start-->
      <header class="header black-bg">
        <div class="sidebar-toggle-box">
          <div class="fa fa-bars tooltips" data-placement="right" data-original-title="Toggle Navigation"></div>
        </div>
        <!--logo start-->
        <a href="index.html" class="logo"><b>DASH<span>BOARD</span></b></a>
        <!--logo end-->
        <div class="nav notify-row" id="top_menu">
          <!--  notification start -->
          <ul class="nav top-menu">
            <!-- settings start -->
            <li class="dropdown">
              <a data-toggle="dropdown" class="dropdown-toggle" href="{{ path("home") }}">
                <i class="fa fa-tasks"></i>
                <span class="badge bg-theme">4</span>
              </a>
              <ul class="dropdown-menu extended tasks-bar">
                <div class="notify-arrow notify-arrow-green"></div>
                  <li>
                    <p class="green">Vous avez 4 tâches en cours</p>
                  </li>
                  <li>
                    <a href="{{ path("home") }}">
                  <div class="task-info">
                    <div class="desc">Panneau d'admnistration</div>
                    <div class="percent">40%</div>
                  </div>
                  <div class="progress progress-striped">
                    <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width: 40%">
                      <span class="sr-only">40% Atteint (success)</span>
                    </div>
                  </div>
                </a>
              </li>
              <li>
                <a href="{{ path("home") }}">
                  <div class="task-info">
                    <div class="desc">Mise à jour base de données</div>
                    <div class="percent">60%</div>
                  </div>
                  <div class="progress progress-striped">
                    <div class="progress-bar progress-bar-warning" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%">
                      <span class="sr-only">60% Atteint (Attention)</span>
                    </div>
                  </div>
                </a>
              </li>
              <li>
                <a href="{{ path("home") }}">
                  <div class="task-info">
                    <div class="desc">Niveaux des stocks</div>
                    <div class="percent">80%</div>
                  </div>
                  <div class="progress progress-striped">
                    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: 80%">
                      <span class="sr-only">80% Restants</span>
                    </div>
                  </div>
                </a>
              </li>
              <li>
                <a href="{{ path("home") }}">
                  <div class="task-info">
                    <div class="desc">Paiements reçus</div>
                    <div class="percent">70%</div>
                  </div>
                  <div class="progress progress-striped">
                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100" style="width: 70%">
                      <span class="sr-only">70% Atteint (Important)</span>
                    </div>
                  </div>
                </a>
              </li>
              <li class="external">
                <a href="#">Voir toutes les tâches</a>
              </li>
            </ul>
          </li>
          <!-- settings end -->
          <!-- inbox dropdown start-->
          <li id="header_inbox_bar" class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="{{ path("home") }}">
              <i class="fa fa-envelope-o"></i>
              <span class="badge bg-theme">2</span>
              </a>
            <ul class="dropdown-menu extended inbox">
              <div class="notify-arrow notify-arrow-green"></div>
              <li>
                <p class="green">Vous avez 2 nouveaux messages</p>
              </li>
              <li>
                <a href="{{ path("home") }}">
                  <span class="photo"><img alt="avatar" src="img/ui-zac.jpg"></span>
                  <span class="subject">
                  <span class="from">Olivier Prieur</span>
                  <span class="time">A l'instant</span>
                  </span>
                  <span class="message">
                  Comment ça se passe ?
                  </span>
                  </a>
              </li>
              <li>
                <a href="{{ path("home") }}">
                  <span class="photo"><img alt="avatar" src="img/ui-divya.jpg"></span>
                  <span class="subject">
                  <span class="from">Ali Syed</span>
                  <span class="time">37 min.</span>
                  </span>
                  <span class="message">
                  Hey, can you come and watch this ?
                  </span>
                  </a>
              </li>
              <li>
                <a href="{{ path("home") }}">Voir tout les messages</a>
              </li>
            </ul>
          </li>
          <!-- inbox dropdown end -->
          <!-- notification dropdown start-->
          <li id="header_notification_bar" class="dropdown">
            <a data-toggle="dropdown" class="dropdown-toggle" href="{{ path("home") }}">
              <i class="fa fa-bell-o"></i>
              <span class="badge bg-warning">2</span>
              </a>
            <ul class="dropdown-menu extended notification">
              <div class="notify-arrow notify-arrow-yellow"></div>
              <li>
                <p class="yellow">Vous avez 2 notifications</p>
              </li>
              <li>
                <a href="{{ path("home") }}">
                  <span class="label label-danger"><i class="fa fa-bolt"></i></span>
                  Temps de réponse lent
                  <span class="small italic">4 mins.</span>
                  </a>
              </li>
              <li>
                <a href="{{ path("home") }}">
                  <span class="label label-success"><i class="fa fa-plus"></i></span>
                  Nouvel utilisateur enregistré.
                  <span class="small italic">3 h.</span>
                  </a>
              </li>
              <li>
                <a href="{{ path("home") }}">Voir toutes les notifications</a>
              </li>
            </ul>
          </li>
          <!-- notification dropdown end -->
        </ul>
      </div>
        <div class="top-menu">
          <ul class="nav pull-right top-menu">
            <!-- <li><a class="logout" href="login.html">Logout</a></li> -->
            <!-- partie droite + menu -->
            {% if not app.user %}
              <a href="{{ path('security_login') }}" class="text-white px-2"><i class="fas fa-sign-in-alt"></i> Connexion</a>
              <a href="{{ path('security_registration') }}" class="text-white px-2"><i class="fas fa-sign-in-alt"></i> S'enregistrer</a>
            {% else %}
              <div class="dropdown">
                <button class="btn btn-warning dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                  Bienvenue <b>{{ app.user.username }}</b>
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                  <!-- ADMIN MENU -->
                  {% if is_granted('ROLE_ADMIN') %}
                    <span class="dropdown-item bg-primary text-white" type="button">Statut : Admin</span>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path("admin_blog") }}"><i class="fas fa-user-cog"></i> Articles Admin</a>
                    <a class="dropdown-item" href="{{ path("admin_categories") }}"><i class="fas fa-user-cog"></i> Catégories Admin</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path("blog_create") }}"><i class="fas fa-user-cog"></i> Créer un article</a>
                    <a class="dropdown-item" href="{{ path("category_create") }}"><i class="fas fa-user-cog"></i> Créer une catégorie</a>

                  <!-- USER MENU -->
                  {% else %}
                    <span class="dropdown-item bg-primary text-white" type="button">Statut : User</span>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="{{ path("blog") }}"><i class="fas fa-list"></i> Liste des articles</a>
                    <a class="dropdown-item" href="{{ path("category") }}"><i class="fas fa-edit"></i> Liste des catégories</a>
                  {% endif %}
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="{{ path("search") }}"><i class="fas fa-search"></i> Rechercher</a>
                  <a class="dropdown-item" href="{{ path("contact") }}"><i class="fas fa-search"></i> Nous contacter</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="{{ path('security_logout') }}" class="text-white"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
                </div>
              </div>
            {% endif %}

          </ul>
        </div>
      </header>

