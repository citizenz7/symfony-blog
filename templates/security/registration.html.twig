{% extends 'base.html.twig' %}

{% block body %}

    <h3>Inscription</h3>
    {{ form_start(form) }}
        {{ form_row(form.username, {'label': 'Nom d\'utilisateur', 'attr': {'placeholder': 'Entrez votre nom d\'utilisateur'}}) }}
        {{ form_row(form.email, {'label': 'Adresse e-mail', 'attr': {'placeholder': 'Entrez votre adresse e-mail'}}) }}
        {{ form_row(form.password, {'label': 'Mot de passe', 'attr': {'placeholder': 'Entrez un mot de passe'}}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmation mot de passe', 'attr': {'placeholder': 'Veuillez confirmer votre mot de passe'}}) }}

        <div class="text-right pt-4">
            <button type="submit" class="btn btn-success">Inscription</button> <button type="reset" class="btn btn-secondary">Annuler</button>
        </div>
    {{ form_end(form) }}


{% endblock %}