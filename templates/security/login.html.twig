{% extends 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col text-center lead pb-3">
        {% if app.user %}
            <div class="alert alert-danger py-4 px-3">Vous êtes déjà connecté(e) en tant que {{ app.user.username }}, <a href="{{ path('security_logout') }}">Déconnexion</a></div>
        {% endif %}
    </div>
</div>

    <div class="row justify-content-md-center">
        <div class="col-sm-5 mt-4 mb-5">

            <h3>Connexion</h3>

            <form action="{{ path('security_login') }}" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input placeholder="Adresse e-mail" type="text" name="_username" class="form-control" required>
                            <!-- On met bien _username ici même si c'est un email... car on a définit le critère de connexion à e-mail -->
                        </div>
                        <div class="form-group">
                            <input placeholder="Mot de passe" type="password" name="_password" class="form-control" required>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Connexion</button> <button type="reset" class="btn btn-secondary">Annuler</button>
                        </div>
            </form>
                    </div>
                    <div class="col text-right">
                        Pas encore de compte ? <a href="{{ path('security_registration') }}">Inscrivez-vous !</a>
                    </div>
                </div>

        </div>
    </div>
{% endblock %}